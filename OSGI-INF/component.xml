<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" name="it.polito.elite.dog.communication.ws">
   <implementation class="it.polito.elite.dog.communication.ws.WebsocketEndPoint"/>
   <reference bind="addHttp" cardinality="1..1" interface="org.osgi.service.http.HttpService" name="HttpService" policy="static"/>
   <reference bind="addedDeviceRESTApi" cardinality="1..1" interface="it.polito.elite.dog.communication.rest.device.api.DeviceRESTApi" name="DeviceRESTApi" policy="static" unbind="removedDeviceRESTApi"/>
   <reference bind="addedEnvironmentRESTApi" cardinality="1..1" interface="it.polito.elite.dog.communication.rest.environment.api.EnvironmentRESTApi" name="EnvironmentRESTApi" policy="static" unbind="removedEnvironmentRESTApi"/>
   <service>
      <provide interface="org.osgi.service.event.EventHandler"/>
   </service>
   <property name="event.topics" type="String" value="it/polito/elite/domotics/model/notification/*">
   </property>
	   
</scr:component>
